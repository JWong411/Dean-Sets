<!DOCTYPE html>
<html>
  <head>
    <title>DeanSets</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/classnames/2.2.5/index.min.js"></script>

  </head>

  <body>
    <h1>Dean Sets</h1>
    <nav>
      <% if logged_in? %>
        <ul class="loggedin-nav-ul">
          <li class="loggedin-nav-li">
            <a href="/">home</a>
          </li>
           <li class="loggedin-nav-li">
             <%= link_to "#{current_user.username}", current_user %>
           </li>
           <li class="loggedin-nav-li">
             <a href="/users/logout">logout</a>
           </li>
        </ul>
      <% else %>
        <ul class="loggedout-nav-ul">
          <%= render 'users/new'%>
          <%= render 'users/login'%>
        </ul>
      <% end %>
    </nav>
    <% if @errors %>
       <div id="error_explanation">
         <ul>
           <% @errors.each do |msg| %>
             <li><%= msg %></li>
           <% end %>
         </ul>
       </div>
     <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
